<section id="posts">
    <div class="container">
        <h2>Recent Posts</h2>
        <div class="posts-grid">
            {% for post in collections.posts | reverse | slice(0, 9) %}
            <div class="post-card" onclick="openModal('{{ post.data.date | readableDate }}', {{ post.templateContent | dump | safe }})">
                <div class="post-card-header">
